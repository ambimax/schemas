{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "event": {
            "type": "string",
            "enum": ["product-published"]
        },
        "origin": {
            "type": ["string", "null"],
            "pattern": "^.+$"
        },
        "sku": {
            "type":"string",
            "pattern": "^.+$"
        },
        "data": { "$ref": "../entities/product.json" }
    },
    "required": [
        "event",
        "origin",
        "sku"
    ],
    "additionalProperties": false
}
