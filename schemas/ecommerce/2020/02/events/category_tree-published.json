
{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "event": {
            "type": "string",
            "enum": [
                "category_tree-published"
            ]
        },
        "origin": {
            "type": [
                "string",
                "null"
            ],
            "pattern": "^.+$"
        },
        "root": {
            "type": "string",
            "pattern": "^.+$",
            "description": "Root category of category tree"
        },
        "data": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "string",
                    "pattern": "^.+$"
                },
                "labels": {
                    "description": "The name of the category.",
                    "$ref": "../akeneoLocaleValue.json"
                },
                "level": {
                    "description": "The level in which this category is.",
                    "type": "number"
                },
                "left": {
                    "description": "Position in Category Tree.",
                    "type": "number"
                },
                "right": {
                    "description": "Used by Akeneo for Building the Category Tree faster.",
                    "type": "number"
                },
                "created": {
                    "description": "TODO: what does this property stand for.",
                    "type": "object",
                    "properties": {
                        "cratedAt": {
                            "description": "Crated at, I think",
                            "type": "string"
                        },
                        "additionalProperties": true
                    }
                },
                "children": {
                    "description": "TODO: what does this property stand for.",
                    "type": "array"
                }
            },
            "required": [
                "code",
                "labels",
                "level",
                "left",
                "right"
            ],
            "additionalProperties": true
        }
    },
    "required": [
        "event",
        "origin",
        "root",
        "data"
    ],
    "additionalProperties": false
}
