{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "scope": {
                "description": "The scope this value applies to.",
                "type": ["string", "null"],
                "pattern": "^.+$"
            },
            "locale": {
                "description": "The locale this value applies to.",
                "type": ["string", "null"],
                "pattern": "^.+$"
            },
            "value": {
                "description": "The value for the locale.",
                "type": [
                    "array",
                    "boolean",
                    "integer",
                    "null",
                    "number",
                    "object",
                    "string"
                ]
            }
        },
        "additionalProperties": false,
        "required": [
            "locale",
            "value"
        ]
    }
}
