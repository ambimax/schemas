{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "category",
    "description": "An entity for a category.",
    "type": "object",
    "properties": {
        "id": {
            "description": "The id of the category.",
            "type": "string",
            "pattern": "^\\w+$"
        },
        "parent": {
            "description": "The parent id of the category.",
            "type": ["string", "null"]
        },
        "count": {
            "description": "The number of products in this category.",
            "type": ["number"]
        },
        "name": {
            "description": "The name of the category.",
            "$ref": "../localeValue.json"
        },
        "left": {
            "description": "Position in Category Tree.",
            "type": ["number"]
        },
        "right": {
            "description": "Used by Akeneo for Building the Category Tree faster.",
            "type": ["number"]
        }
    },
    "required": [
        "id", "parent", "count", "name"
    ],
    "additionalProperties": false
}
