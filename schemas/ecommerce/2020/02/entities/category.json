{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "category",
    "description": "An entity for a category.",
    "type": "object",
    "properties": {
        "id": {
            "description": "The id of the category.",
            "type": "string",
            "pattern": "^\\w+$"
        },
        "parent": {
            "description": "The parent id of the category. The string \"NONE\" denotes no parent.",
            "type": "string"
        },
        "name": {
            "description": "The name of the category.",
            "$ref": "../localeValue.json"
        }
    },
    "required": [
        "id", "parent", "name"
    ],
    "additionalProperties": false
}
