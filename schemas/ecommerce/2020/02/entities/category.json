{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "category",
    "description": "An entity for a category.",
    "definitions": {
        "localizedValue": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "locale": {
                        "description": "The locale this value applies to. An empty string means a fallback value.",
                        "type": "string"
                    },
                    "value": {
                        "description": "The value for the locale.",
                        "type": [
                            "array",
                            "boolean",
                            "integer",
                            "null",
                            "number",
                            "object",
                            "string"
                        ]
                    }
                },
                "additionalProperties": false,
                "required": [
                    "locale",
                    "value"
                ]
            }
        }
    },
    "properties": {
        "id": {
            "description": "The id (sku or stock keeping unit) of the product.",
            "type": "string"
        },
        "name": {
            "description": "The name of the product.",
            "$ref": "#/definitions/localizedValue"
        },
        "categories": {
            "description": "The categories the product is a part of.",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "attributes": {
            "description": "All attriubte values for the product.",
            "type": "object",
            "patternProperties": {
                "^.$": {
                    "$ref": "#/definitions/localizedValue"
                }
            }
        },
        "metadata": {
            "description": "Contains metadata for the product.",
            "type": "object",
            "properties": {
                "createdAt": {
                    "description": "When the product was first created.",
                    "type": "string",
                    "format": "date-time"
                },
                "updatedAt": {
                    "description": "When the product was last updated.",
                    "type": "string",
                    "format": "date-time"
                }
            },
            "additionalProperties": false,
            "required": [
                "createdAt",
                "updatedAt"
            ]
        }
    },
    "required": [
        "id",
        "name",
        "categories",
        "attributes",
        "metadata"
    ],
    "additionalProperties": false
}
