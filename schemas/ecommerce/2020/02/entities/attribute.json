{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "attribute",
    "description": "An entity for an attribute.",
    "type": "object",
    "properties": {
        "id": {
            "description": "The id of the attribute.",
            "type": "string",
            "pattern": "^\\w+$"
        },
        "name": {
            "description": "The name of the attribute.",
            "$ref": "../localeValue.json"
        },
        "type": {
            "description": "The type of the attribute.",
            "type": "string",
            "enum": [
                "identifier",
                "text",
                "textarea",
                "boolean",
                "number",
                "simpleselect",
                "multiselect",
                "date",
                "metric",
                "price_collection",
                "file",
                "image"
            ]
        },
        "options": {
            "description": "The options of the attribute",
            "type": ["array", "null"],
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "description": "The id of the option.",
                        "type": "string",
                        "pattern": "^\\w+$"
                    },
                    "name": {
                        "description": "The name of the option.",
                        "$ref": "../localeValue.json"
                    }
                }
            }
        }
    },
    "required": [
        "id",
        "name",
        "type",
        "options"
    ],
    "additionalProperties": false
}