{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "categoryTree",
    "description": "An entity for a category tree.",
    "type": "object",
    "properties": {
        "code": {
            "type": "string",
            "pattern": "^.+$"
        },
        "name": {
            "description": "The name of the category.",
            "$ref": "../localeValue.json"
        },
        "level": {
            "description": "The level in which this category is.",
            "type": "number"
        },
        "left": {
            "description": "Position in Category Tree.",
            "type": "number"
        },
        "right": {
            "description": "Used by Akeneo for Building the Category Tree faster.",
            "type": "number"
        },
        "created": {
            "description": "To determine exactly when the category was created at",
            "type": "object",
            "properties": {
                "date": {
                    "description": "Date with time when the category was created at",
                    "type": "string",
                    "pattern": "^.+$"
                },
                "timezone": {
                    "description": "Timezone for written :date",
                    "type": "string",
                    "examples": ["UTC"]
                },
                "timezone_type": {
                    "description": "Type of :timezone for written :date",
                    "type": "number"
                }
            }
        },
        "children": {
            "type": "array",
            "items": {
                "$ref": "./categoryTree.json"
            }
        }
    },
    "required": [
        "code",
        "labels",
        "level",
        "left",
        "right"
    ],
    "additionalProperties": true
}
