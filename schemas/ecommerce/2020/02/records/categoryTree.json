{
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "Record type for category tree.",
    "type": "object",
    "properties": {
        "entity": {
            "type": "string",
            "enum": ["categoryTree"]
        },
        "root": {
            "type": "string",
            "pattern": "^.+$"
        },
        "operation": {
            "type": "string",
            "enum": ["publish"]
        },
        "data": { "$ref": "../entities/categoryTree.json" }
    },
    "required": [
        "entity", "root", "operation", "data"
    ],
    "additionalProperties": false
}
