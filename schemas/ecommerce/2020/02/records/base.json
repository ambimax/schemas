{
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "Base type for all records.",
    "type": "object",
    "properties": {
        "entity": {
            "type": "string",
            "pattern": "^.+$"
        },
        "id": {
            "type": "string",
            "pattern": "^.+$"
        },
        "operation": {
            "type": "string",
            "pattern": "^.+$"
        },
        "data": {
            "type": ["object", "null"]
        }
    },
    "required": ["entity", "id", "operation", "data"],
    "additionalProperties": false
}
